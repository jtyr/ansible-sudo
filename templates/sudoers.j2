{{ ansible_managed | comment }}
{% if sudo_host_alias -%}
  {{ "\n" }}# Host aliases{{ "\n" }}
  {%- for alias, values in sudo_host_alias.tems() -%}
    Host_Alias {{ alias }} = {{ values | join(', ') }}{{ "\n" }}
  {%- endfor %}
{% endif %}

{%- if sudo_user_alias -%}
  {{ "\n" }}# User aliases{{ "\n" }}
  {%- for alias, values in sudo_user_alias.items() -%}
    User_Alias {{ alias }} = {{ values | join(', ') }}{{ "\n" }}
  {%- endfor %}
{% endif %}

{%- if sudo_cmd_alias -%}
  {{ "\n" }}# Command aliases{{ "\n" }}
  {%- for alias, values in sudo_cmd_alias.items() -%}
    Cmnd_Alias {{ alias }} = {{ values | join(', ') }}{{ "\n" }}
  {%- endfor %}
{% endif %}

{%- if sudo_defaults -%}
  {{ "\n" }}# Defaults{{ "\n" }}
  {%- for item in sudo_defaults -%}
    Defaults {{ item }}{{ "\n" }}
  {%- endfor %}
{% endif %}

{%- if sudo_users -%}
  {{ "\n" }}# Users and groups{{ "\n" }}
  {%- for item in sudo_users %}
    {%- for user, options in item.items() -%}
      {{ user }} {{ options['host'] }} ={{ ' ' }}
      {%- if 'runas' in options and options['runas'] | length > 0 -%}
        ({{ options['runas'] }}){{ ' ' }}
      {%- endif -%}
      {%- if 'tag' in options and options['tag'] | length > 0 -%}
        {{ options['tag'] }}:{{ ' ' }}
      {%- endif -%}
      {{ options['cmd'] }}{{ "\n" }}
    {%- endfor %}
  {%- endfor %}
{% endif %}

{%- if sudo_include -%}
  {{ "\n" }}# File includes{{ "\n" }}
  {%- for item in sudo_include -%}
    #include {{ item }}{{ "\n" }}
  {%- endfor %}
{% endif %}

{%- if sudo_includedir -%}
  {{ "\n" }}# Directory includes{{ "\n" }}
  {%- for item in sudo_includedir -%}
    #includedir {{ item }}{{ "\n" }}
  {%- endfor %}
{% endif %}
